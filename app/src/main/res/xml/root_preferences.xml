<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general_header">

        <EditTextPreference
            app:key="Username"
            app:title="@string/username_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Option 1"
            app:entries="@array/some_setting_entries"
            app:entryValues="@array/some_setting_values"
            app:key="some_setting"
            app:title="@string/some_setting_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/Type_header">

        <SwitchPreferenceCompat
            app:key="daryl"
            app:title="@string/daryl_title" />

        <SwitchPreferenceCompat
            app:dependency="daryl"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>




</PreferenceScreen>